<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF5FF">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_volcano_1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/ThemeOverlay.AppCompat"
        android:layout_alignParentTop="true"
        app:titleTextAppearance="@style/Toolbar.TitleText" />
    <ImageView
        android:id="@+id/id_check_list_navigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_check_list_navigation"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/id_check_list_navigate_reverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_check_list_navigation"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:rotation="180"
        />


    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_below="@+id/toolbar_volcano_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_check_list"
        tools:context="com.example.chaokuan_hao.nasa_app.CheckList">

    </ListView>

</RelativeLayout>
